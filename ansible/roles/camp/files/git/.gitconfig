[user]
	email = git@yuru.moe
	name = NextFire
	signingkey = ~/.ssh/id_ed25519.pub
[core]
	autocrlf = input
[gpg]
	format = ssh
[gpg "ssh"]
	allowedSignersFile = ~/.config/git/allowed_signers
[init]
	defaultBranch = main
[fetch]
	prune = true
[pull]
	rebase = true
[commit]
	gpgSign = true
[tag]
	gpgSign = true
[push]
	autoSetupRemote = true
[rebase]
	autosquash = true
	autostash = true
[merge]
	conflictstyle = zdiff3
	ff = false
[rerere]
	enabled = true
[url "git@github.com:"]
	insteadOf = "https://github.com/"
